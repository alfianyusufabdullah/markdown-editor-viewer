<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnH3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="h3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnH5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnH5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="h5"
        app:layout_constraintEnd_toStartOf="@+id/btnBold"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnH3"
        app:layout_constraintTop_toTopOf="@id/btnH3" />

    <Button
        android:id="@+id/btnBold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="b"
        app:layout_constraintEnd_toStartOf="@+id/btnItalic"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnH5"
        app:layout_constraintTop_toTopOf="@id/btnH3" />

    <Button
        android:id="@+id/btnItalic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="i"
        app:layout_constraintEnd_toStartOf="@+id/btnCode"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBold"
        app:layout_constraintTop_toTopOf="@id/btnH3" />

    <Button
        android:id="@+id/btnCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text="Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnItalic"
        app:layout_constraintTop_toTopOf="@id/btnH3" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@id/btnH3"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/markdownEditor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            android:gravity="start"
            android:hint="Write your mark down here"
            android:imeOptions="actionDone"

            android:inputType="text|textNoSuggestions|textMultiLine"
            android:padding="30dp" />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>